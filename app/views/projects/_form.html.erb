<%= form_for(@project, :html => { :multipart => true }) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :project_title %><br />
    <%= f.text_field :project_title %>
  </div>
  <div class="field">
    <%= f.label :project_description %><br />
    <%= f.text_area :project_description %>
  </div>
  <div class="field">
    <%= f.label :project_started %><br />
    <%= f.date_select :project_started %>
  </div>
  <div class="field">
    <%= f.label :project_ended %><br />
    <%= f.date_select :project_ended %>
  </div>
  <div class="field">
    <%= f.label :project_platform %><br />
    <%= f.text_field :project_platform %>
  </div>
  <div class="field">
    <%= f.label :developers %><br />
	<% for developer in @developers -%>
		<%= check_box_tag('developer_list[]', developer.id, @project.developers.collect {|obj| obj.id}.include?(developer.id)) %><%= developer.developer_name %><br />
	<% end -%>
   
  </div>
<div>
<%= f.label :Screenshot %><br />
<%= f.file_field :image %>
</div>
<div>
<%= f.label :ProjectUrl %><br />
<%= f.text_field :url_path %>
</div>
<div>
<%= f.label :Technology_Used %><br />
<%= f.text_field :tecnology_used %>
</div>


  <div class="field">
    <%= f.label :project_owner %><br />
    <%= f.text_field :project_owner %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
